<RadzenTemplateForm TItem="RegisterModel"
                    Data=@RegisterModelComponent
                    Submit="@OnModelSubmitAsync">

    <RadzenStack AlignItems="AlignItems.Center">

        @* FirstName Input *@
        <RadzenStack Orientation="Orientation.Vertical" Gap="0.5rem">
            <RadzenFormField Text="Indtast fornavn" Style="width: auto; max-width: 300px;">
                <RadzenTextBox Name="FirstNameRequiredInput" @bind-Value=@RegisterModelComponent.FirstName />
                <RadzenRequiredValidator Component="FirstNameRequiredInput" Text="Fornavn skal tilføjes"/>
            </RadzenFormField>
        </RadzenStack>

        @* LastName Input *@
        <RadzenStack Orientation="Orientation.Vertical" Gap="0.5rem">
            <RadzenFormField Text="Indtast efternavn" Style="width: auto; max-width: 300px;">
                <RadzenTextBox Name="LastNameRequiredInput" @bind-Value=@RegisterModelComponent.LastName />
                <RadzenRequiredValidator Component="LastNameRequiredInput" Text="Eternavn skal tilføjes" />
            </RadzenFormField>
        </RadzenStack>

        @* PhoneNumber Input *@
        <RadzenStack Orientation="Orientation.Vertical" Gap="0.5rem">
            <RadzenFormField Text="Indtast telefonnummer" Style="width: auto; max-width: 300px;">
                <RadzenMask Name="PhoneNumberRequiredInput" Mask="** ** ** **" CharacterPattern="[0-9]" @bind-Value=@RegisterModelComponent.PhoneNumber> </RadzenMask>
                <RadzenRequiredValidator Component="PhoneNumberRequiredInput" Text="Telefonnummer skal tilføjes" />
            </RadzenFormField>
        </RadzenStack>

        @* Country Input *@
        <RadzenStack Orientation="Orientation.Vertical" Gap="0.5rem">
            <RadzenFormField Text="Indtast land" Style="width: auto; max-width: 300px;">
                <RadzenTextBox Name="CountryRequiredInput" @bind-Value=@RegisterModelComponent.Country Style="width: 100%; max-width: 400px;" />
                <RadzenRequiredValidator Component="CountryRequiredInput" Text="Land skal tilføjes" />
            </RadzenFormField>
        </RadzenStack>

        @* Language Input *@
        <RadzenStack Orientation="Orientation.Vertical" Gap="0.5rem">
            <RadzenFormField Text="Indtast sprog" Style="width: auto; max-width: 300px;">
                <RadzenTextBox Name="LanguageRequiredInput" @bind-Value=@RegisterModelComponent.Language Style="width: 100%; max-width: 400px;" />
                <RadzenRequiredValidator Component="LanguageRequiredInput" Text="Sprog skal tilføjes" />
            </RadzenFormField>
        </RadzenStack>

        @* Address Input *@
        <RadzenStack Orientation="Orientation.Vertical" Gap="0.5rem">
            <RadzenFormField Text="Indtast adresse" Style="width: auto; max-width: 300px;">
                <RadzenTextBox Name="AdressRequiredInput" @bind-Value=@RegisterModelComponent.Address Style="width: 100%; max-width: 400px;" />
                <RadzenRequiredValidator Component="AdressRequiredInput" Text="Address skal tilføjes" />
            </RadzenFormField>
        </RadzenStack>

        <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Text="Opret bruger" />

    </RadzenStack>
</RadzenTemplateForm>